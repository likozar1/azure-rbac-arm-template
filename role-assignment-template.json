{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "scopes": {
            "type": "array",
            "defaultValue": [
                "[subscription().id]"
            ],
            "metadata": {
                "description": "Role assignable scope with default value of id for current active subscription"
            }
        },
        "roleDefinitionID": {
            "type": "string",
            "metadata": {
                "description": "Specifies the role definition ID used in the role assignment."
            }
        },
        "principalId": {
            "type": "string",
            "metadata": {
                "description": "Specifies the principal ID assigned to the role."
            }
        }
    },
    "variables": {
        "roleAssignmentName": "[guid(parameters('principalId'), parameters('scopes'), parameters('roleDefinitionID')]"
    },
    "resources": [
        {
            "type": "Microsoft.Authorization/roleAssignments",
            "apiVersion": "2020-04-01-preview",
            "name": "[variables('roleAssignmentName')]",
            "properties": {
                "roleDefinitionId": "[resourceId('Microsoft.Authorization/roleDefinitions', parameters('roleDefinitionId'))]",
                "principalId": "[parameters('principalId')]",
                "scope": "[parameters('scopes')]"
            }
        }
    ]
}